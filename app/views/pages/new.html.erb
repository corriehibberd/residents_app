<h1 class="page-header">New Page</h1>
<%= form_for @page do |f| %>
	<div class="form-group">
		<%= f.label :name %>
    <%= f.text_field :name, :class => 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :title %>
    <%= f.text_field :title, :class => 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :content %>
    <%= f.text_area :content, :class => 'form-control' %>
	</div>
	<div>
    <%= f.submit :class => 'btn btn-default' %>
	</div>
<% end %>
