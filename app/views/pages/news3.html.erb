<% provide(:title, 'News 3') %>
<div class="background_image">
  <%= image_tag "riddlesdown_april1550.jpg", :class=> "img-responsive" %>
</div>
       
<div id="welcome-panel">
  <h2>Local News and Events</h2>
</div>
<div id="main-wrapper">
   <div class="container" id="main-content">
    <div class="welcome">
      <div class="content">
          <div class="row marketing">
           <div class="col-md-12">
           	 <h3>Grants and Prizes presented at the Residents' Association AGM 2016</h3>

<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    <li data-target="#carousel-example-generic" data-slide-to="3"></li>
    <li data-target="#carousel-example-generic" data-slide-to="4"></li>
    <li data-target="#carousel-example-generic" data-slide-to="5"></li>
    <li data-target="#carousel-example-generic" data-slide-to="6"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <%= image_tag "agm2016/2016AGM.jpg", alt: "The 2016 AGM" %>
      <div class="carousel-caption">
        <h3>The 2016 AGM</h3>
      </div>
    </div>
    <div class="item">
      <%= image_tag "agm2016/hamsey_green_scouts.jpg", alt: "Hamsey Green Scouts" %>
      <div class="carousel-caption">
        <h3>Donation to the 2nd Hamsey Green Scout Pack</h3>
      </div>
    </div>
    <div class="item">
      <%= image_tag "agm2016/jamboree.jpg", alt: "Scout Jamboree" %>
      <div class="carousel-caption">
        <h3>Mark Lord reported on the Scout Jamboree in Japan</h3>
      </div>
    </div>
    <div class="item">
      <%= image_tag "agm2016/neighbourhood_care.jpg", alt: "Neighbourhood care" %>
      <div class="carousel-caption">
        <h3>Donation to Sanderstead Neighbourhood Care</h3>
      </div>
    </div>
    <div class="item">
      <%= image_tag "agm2016/neighbourhood_watch.jpg", alt: "Neighbourhood watch" %>
      <div class="carousel-caption">
        <h3>Donation to Neighbourhood Watch</h3>
      </div>
    </div>
    <div class="item">
      <%= image_tag "agm2016/poem_for_queen.jpg", alt: "Poem for the Queen" %>
      <div class="carousel-caption">
        <h3>Winner of "Poem for the Queen" with Chris Phillp MP</h3>
      </div>
    </div>
     <div class="item">
      <%= image_tag "agm2016/selsdon_little_league.jpg", alt: "Selsdon Little League" %>
      <div class="carousel-caption">
        <h3>Donation to Selsdon Little League</h3>
      </div>
    </div>     
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

          <b>Sanderstead Residents' Association AGM  28th April 2016</b>
  
           <p>If your organisation would like to apply for a grant from the Sanderstead Residents' Association, please visit the <%=link_to("about page", about_path) %> for more information.
           </div>
           	</div>
      </div> <!-- /content -->
    </div><!--/welcome -->
  </div><!--/#main-content -->
</div><!-- #main-wrapper -->

