<%= form_for @page do |f| %>
	<div class="form-group">
		<%= f.label :name %>
    <%= f.text_field :name, :class => 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :title %>
    <%= f.text_field :title, :class => 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :heading %>
    <%= f.text_field :heading, :class => 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :background_image %>
    <%= f.text_field :background_image, :class => 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :content1 %>
    <%= f.text_area :content1, class: 'form-control', rows:15 %>
	</div>
	<div class="form-group">
		<%= f.label :content2 %>
    <%= f.text_area :content2, class: 'form-control', rows: 10 %>
	</div>
	<div class="form-group">
		<%= f.label :content3 %>
    <%= f.text_area :content3, class: 'form-control', rows: 10 %>
	</div>
	<div class="form-group">
		<%= f.label :template %>
    <%= f.select :template, %w(template1 template2 template3), {},  :class => 'form-control' %>
	</div>
	<div>
    <%= f.submit :class => 'btn btn-default' %>
	</div>
<% end %>
